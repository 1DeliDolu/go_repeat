package pages

import (
	"pehlione.com/app/pkg/view"
	"pehlione.com/app/templates/layout"
)

templ Cart(flash *view.Flash) {
	@layout.Base("Shopping Cart", flash, CartBody())
}

templ CartBody() {
	<div class="max-w-4xl mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold mb-8">Shopping Cart</h1>
		
		<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
			<!-- Cart Items -->
			<div class="lg:col-span-2">
				<div class="border rounded-lg p-6">
					<p class="text-gray-600 text-center py-12">
						Your cart is empty. <a href="/products" class="text-indigo-600 hover:text-indigo-700 font-semibold">Continue shopping</a>
					</p>
				</div>
			</div>

			<!-- Cart Summary -->
			<div class="lg:col-span-1">
				<div class="border rounded-lg p-6 sticky top-6">
