{{define "content"}}
  <p style="font-size:15px;color:#475569;margin:0 0 16px;">You requested to change your password. Please confirm this action by clicking the button below. If this wasn't you, click the cancel link to decline the change.</p>
  <p style="text-align:center;margin:24px 0;">
    <a href="{{trackURL .ConfirmURL "password_change_confirm"}}" style="display:inline-block;background:#10b981;color:#ffffff;padding:14px 32px;border-radius:999px;font-weight:600;text-decoration:none;margin-right:12px;">Confirm Password Change</a>
  </p>
  <p style="text-align:center;margin:16px 0;">
    <a href="{{trackURL .CancelURL "password_change_cancel"}}" style="color:#ef4444;text-decoration:underline;font-size:14px;">Cancel this password change</a>
  </p>
  <p style="font-size:13px;color:#94a3b8;">This link expires in {{.ExpiresIn}}. For security reasons you may only use it once.</p>
{{end}}
